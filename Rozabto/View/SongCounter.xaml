<UserControl x:Class="Rozabto.View.SongCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rozabto.View"
             mc:Ignorable="d" Loaded="CounterLoaded"
             d:DesignHeight="450" d:DesignWidth="800">

    <DockPanel Background="DarkCyan">
        <Label DockPanel.Dock="Left" Name="Counter" Content="0" Foreground="LightSteelBlue"/>
        <Label DockPanel.Dock="Left" Content="/" Foreground="LightSteelBlue"/>
        <Label DockPanel.Dock="Left" Name="Max" Content="101" Foreground="LightSteelBlue"/>
        <Label DockPanel.Dock="Left" Name="Loading" Content="Kuva" Foreground="LightSteelBlue"/>
    </DockPanel>

</UserControl>
