<UserControl x:Class="Rozabto.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rozabto.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox>
        <ListBoxItem>
            <DockPanel>
                <TextBlock Text="Тема" DockPanel.Dock="Top" FontSize="25" Foreground="{DynamicResource ForegroundColour}"/>
                <TextBlock Text="Промени цвета като натиснеш бутона" DockPanel.Dock="Top" FontSize="10" Foreground="{DynamicResource ForegroundColour}"/>
                <ToggleButton Click="ChangeColor" RenderTransformOrigin="0.401,0.398" Height="30" DockPanel.Dock="Left" />
                <TextBlock Name="ColorText" Text="Black" DockPanel.Dock="Right" Foreground="{DynamicResource ForegroundColour}" Margin="5"/>
            </DockPanel>
        </ListBoxItem>
    </ListBox>

</UserControl>
