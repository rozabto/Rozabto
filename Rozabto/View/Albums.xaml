<UserControl x:Class="Rozabto.View.Album"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Rozabto.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox ItemsSource="{Binding Albums}" SelectionChanged="SelectAlbum">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel Width="60">
                        <Image DockPanel.Dock="Top" Width="40" Height="40"/>
                        <Label Content="{Binding Name}" DockPanel.Dock="Bottom" FontSize="8" Foreground="{DynamicResource ForegroundColour}"/>
                        <Label Content="{Binding SongsCount}" DockPanel.Dock="Bottom" Grid.Row="2" FontSize="8" Foreground="{DynamicResource ForegroundColour}"/>
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
